rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is friends with another user
    function isFriend(userId) {
      return request.auth.uid in get(/databases/$(database)/documents/users/$(userId)).data.friends;
    }
    
    // Users can read all user documents (for search), but only update their own
    match /users/{userId} {
      // Allow all authenticated users to read any user profile (for search and friend features)
      allow read: if request.auth != null;
      
      // Allow users to create and update their own profile
      allow create, update: if request.auth != null && request.auth.uid == userId;
      
      // Allow users to add friend requests to other users' receivedFriendRequests array
      allow update: if request.auth != null && 
                       request.auth.uid != userId &&
                       request.resource.data.diff(resource.data).affectedKeys().hasOnly(['receivedFriendRequests']);
      
      // Allow users to add themselves to other users' friends array (for accepting friend requests)
      allow update: if request.auth != null && 
                       request.auth.uid != userId &&
                       request.resource.data.diff(resource.data).affectedKeys().hasOnly(['friends']) &&
                       request.auth.uid in request.resource.data.friends;
      
      // Allow users to remove themselves from other users' friends array (for removing friends)
      allow update: if request.auth != null && 
                       request.auth.uid != userId &&
                       request.resource.data.diff(resource.data).affectedKeys().hasOnly(['friends']) &&
                       request.auth.uid in resource.data.friends &&
                       !(request.auth.uid in request.resource.data.friends);
      
      // Allow users to update both friends and receivedFriendRequests (for notifying acceptance)
      allow update: if request.auth != null && 
                       request.auth.uid != userId &&
                       request.resource.data.diff(resource.data).affectedKeys().hasOnly(['friends', 'receivedFriendRequests']) &&
                       request.auth.uid in request.resource.data.friends;
      
      allow delete: if false; // Block deletes
      
      // User's rounds subcollection - owner can read/write, friends can read and add likes/comments
      match /rounds/{roundId} {
        allow read: if request.auth != null && (request.auth.uid == userId || isFriend(userId));
        allow write: if request.auth != null && request.auth.uid == userId;
        
        // Allow friends to add/remove likes and comments
        allow update: if request.auth != null && 
                         isFriend(userId) &&
                         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'comments']);
      }
      
      // User's statistics subcollection
      match /statistics/{statId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // User's favorite courses subcollection
      match /favoriteCourses/{courseId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // User's marked course locations (tee boxes, greens)
      match /markedCourseLocations/{courseId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        match /holes/{holeNumber} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
          match /tees/{teeColor} {
            allow read, write: if request.auth != null && request.auth.uid == userId;
          }
        }
      }
    }
    
    // Global courses collection - authenticated users can read/write for caching
    // This allows course caching from any authenticated user
    match /courses/{courseId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null;
      allow delete: if false; // Prevent deletion of cached courses
    }
    
    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

