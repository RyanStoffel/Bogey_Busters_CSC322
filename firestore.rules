rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can manage only their own profile document
    match /users/{userId} {
      allow read, create, update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false; // optional: block deletes
      
      // User's rounds subcollection
      match /rounds/{roundId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // User's statistics subcollection
      match /statistics/{statId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // User's favorite courses subcollection
      match /favoriteCourses/{courseId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // User's marked course locations (tee boxes, greens)
      match /markedCourseLocations/{courseId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        match /holes/{holeNumber} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
          match /tees/{teeColor} {
            allow read, write: if request.auth != null && request.auth.uid == userId;
          }
        }
      }
    }
    
    // Global courses collection - authenticated users can read/write for caching
    // This allows course caching from any authenticated user
    match /courses/{courseId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null;
      allow delete: if false; // Prevent deletion of cached courses
    }
    
    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

